<div class="home-landing">
	<section class="home-banner">
		<div class="title-overlay">
			<h1>Home</h1>
		</div>
		<img src="https://s3.us-east-2.amazonaws.com/fall-2017/Home+Landing/LandingBanner.jpg">
	</section>
	<section class="home-categories">
		{% for link in linklists.['home'].links %}
			{% assign link_handle = link.title | handleize %}
			{% if link_handle contains "made" %}
				{% assign class = ' half-width' %}
			{% endif %}
			<div class="home-category{{ class }}" style="background-image: url({{ 'https://s3.us-east-2.amazonaws.com/fall-2017/Home+Landing/' | append: link_handle |  append: '.jpg'}});">
			  <a href="{{ link.url }}">
			  	<div class="title-overlay dark-hover">
			  		<h2>{{ link.title }}</h2>
			  	</div>
			  </a>
		  </div>
		{% endfor %}
	</section>
</div>