<div class="customers">
  <div class="sixteen columns clearfix collection_nav">
    <h1 class="center">{{ 'customer.reset_password.title' | t }}</h1>
    <div class="feature_divider"></div>
  </div>

  <div class="section clearfix">  
    <div class="six columns offset-by-five reset">
      <br class="clear" />
      {% form 'reset_customer_password' %}
        <p class="center">
          <em>{{ 'customer.reset_password.subtext' | t: email: email }}</em>
        </p>
       
        {{ form.errors | default_errors }}

        <fieldset>
          <label class="large" for="password">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
        </fieldset>
        <fieldset>
          <label class="large" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
        </fieldset>
        <fieldset class="button-inside">
          <button type="submit" value="{{ 'customer.reset_password.submit' | t }}">{{ 'customer.reset_password.submit' | t }}</button>
        </fieldset>
      {% endform %}
    </div>
  </div>
</div>